<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mingchao_boot.Mapper.loginMapper">
    <insert id="addUser">
        insert into user(phone) values (#{phone})
    </insert>
    <select id="checkPhone" resultType="com.example.mingchao_boot.model.User">
        select * from user where phone = #{phone}
    </select>
</mapper>